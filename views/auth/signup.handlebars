<section class='bg-grayLight'>
  <div
    class='flex flex-col items-center justify-center px-6 mx-auto md:pt-4 lg:py-0'
  >
    <div
      class='w-full bg-white rounded-lg betterShadow md:mt-0 sm:max-w-md xl:p-0'
    >
      <div class='p-6 space-y-4 md:space-y-6 sm:p-8'>
        <h1
          class='text-xl font-bold leading-tight tracking-tight text-grayDark md:text-2xl'
        >
          Create an account
        </h1>
        <form
          class='space-y-4 md:space-y-6'
          action='/upload'
          method='POST'
          enctype='multipart/form-data'
        >
          <div>
            <label
              for='profilePic'
              class='block mb-2 text-sm font-medium text-grayDark'
            >Profile Picture</label>
            <input
              type='file'
              name='profilePic'
              id='profilePic'
              class='bg-grayLight border border-grayDark text-grayDark sm:text-sm rounded-lg block w-full p-2.5'
              required
            />
          </div>
          <div>
            <label
              for='email'
              class='block mb-2 text-sm font-medium text-grayDark'
            >Your email</label>
            <input
              type='email'
              name='email'
              id='email'
              class='bg-grayLight border border-grayDark text-grayDark sm:text-sm rounded-lg block w-full p-2.5'
              placeholder='hello@email.com'
              required=''
            />
          </div>
          <div>
            <label
              for='password'
              class='block mb-2 text-sm font-medium text-grayDark'
            >Password</label>
            <input
              type='password'
              name='password'
              id='password'
              placeholder='••••••••'
              class='bg-grayLight border border-grayDark text-grayDark sm:text-sm rounded-lg block w-full p-2.5'
              required=''
            />
          </div>
          <div>
            <label
              for='password'
              class='block mb-2 text-sm font-medium text-grayDark'
            >Password Again</label>
            <input
              type='password'
              name='password'
              id='password'
              placeholder='••••••••'
              class='bg-grayLight border border-grayDark text-grayDark sm:text-sm rounded-lg block w-full p-2.5'
              required=''
            />
          </div>
          <button
            type='submit'
            class='w-full text-white bg-blue hover:bg-grayDark hover:text-offWhite transition-all ease-in-out duration-200 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800'
          >Create</button>
        </form>
      </div>
    </div>
  </div>
</section>